$stdout.sync = true
$stderr.sync = true
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'java_buildpack/buildpack'


build_dir = ARGV[0]
cache_dir = ARGV[1]

system("echo " + cache_dir)
system("wget -nc 'http://nlp.stanford.edu/software/stanford-english-corenlp-2016-01-10-models.jar' -P " +cache_dir)
system("cp "+cache_dir+"/stanford-english-corenlp-2016-01-10-models.jar "+build_dir+"/WEB-INF/lib")


JavaBuildpack::Buildpack.with_buildpack(build_dir, 'Compile failed with exception %s') do |buildpack|
  buildpack.compile
end
